<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/joinLayout"
    android:background="@color/colorPrimary">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:hint="Enter the mobile number of The Owner"
        android:layout_centerHorizontal="true"
        android:textColorHint="#fff"
        android:textSize="15dp"
        android:id="@+id/join_phn"
        />
    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_custom_shape"
        android:id="@+id/join_search"
        android:layout_below="@+id/join_phn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"

        android:src="@drawable/search_icon"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="300dp"
        android:foregroundGravity="center"
        android:layout_height="150dp"
        android:layout_below="@+id/join_search"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/recyclerview_join"
        />
<!--    <fragment-->
<!--        android:id="@+id/networkDetailHolder"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:layout_above="@+id/next"-->
<!--        android:layout_marginBottom="30dp"-->
<!--        android:name="com.example.moneytree.ShowNetworkDetails"-->
<!--        tools:layout="@layout/network_details"-->
<!--        />-->
    <RelativeLayout
        android:id="@+id/detailsHolder"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/textview_custom_shape"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:layout_above="@+id/joinrequest_button">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:gravity="right"
            android:textSize="18sp"
            android:text="vhdvhegd"
            />
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:gravity="right"
            android:textSize="15sp"
            android:text="Number of People Jojned:"
            android:layout_below="@+id/name"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/newid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hbhjb"
            android:layout_toRightOf="@+id/tv1"
            android:layout_below="@+id/name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:gravity="right"
            android:textSize="15sp"
            android:text="Maximum Amount:"
            android:layout_below="@+id/tv1"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hbhjb"
            android:layout_toRightOf="@+id/tv2"
            android:layout_below="@+id/tv1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/maxamnt"/>



    </RelativeLayout>
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request to Join"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/colorPrimaryDark"
        android:id="@+id/joinrequest_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />







</RelativeLayout>